rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to user_requests for login email checking
    match /user_requests/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow public read access to staff_state for admin login checking  
    match /staff_state/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Monthly menu data - read access for all authenticated users, write for admins
    match /monthly_menu/{document} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Premium requests - read/write access for authenticated users
    match /premium_requests/{document} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Default rule for other collections - require authentication
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}